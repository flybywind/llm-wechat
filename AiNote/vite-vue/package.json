{
  "name": "vite-vue",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite build --mode development && vite",
    "watch": "nodemon --config nodemon.json",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "sync:electron": "rsync -av ../www/ ../platforms/electron/www/",
    "electron": "npm run build && npm run sync:electron && cd .. && electron platforms/electron/www/cdv-electron-main.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "marked": "^14.1.3",
    "pinia": "^2.2.5",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitest/coverage-v8": "^0.34.6",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^25.0.1",
    "nodemon": "^3.1.7",
    "sass": "^1.80.6",
    "terser": "^5.36.0",
    "vite": "^5.4.10",
    "vitest": "^0.34.6"
  }
}
